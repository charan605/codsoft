import random


lower="abcdefghijklmnopqrstuvwxyz"

upper ="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
numbers = "1234567890"
symbols = "!@#$%^&*()_+/"


print("welcome to charan's password generator")
print("customise your password")
length= int(input("enter no of digits of password:"))

n_lower=int(input("how many lower letters you want in your password?\n"))
n_upper=int(input("how many upper letters you want in your password?\n"))
n_numbers=int(input("how many numbers you want in your password?\n"))
n_symbols=int(input("how many symbols you want in your password?\n"))

all = lower + upper + numbers + symbols


password="" .join(random.sample(all,length))
print(password)
